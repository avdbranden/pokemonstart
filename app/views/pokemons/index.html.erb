<div class="title-index">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h1>List of Pok√©mon starters</h1>
      </div>
    </div>
  </div>
</div>

<div class="pokemons-index">
  <div class="container">
    <div class="row">
      <% @pokemons.each do |pokemon| %>
        <div class="col-xs-12 col-md-4 col-md-offset-1 text-center">
          <div class="card">
            <div class="pokemon-image">
              <%= link_to image_tag("#{pokemon.name.downcase}.png", class: "img-responsive img-thumbnail"), pokemon_path(pokemon)%>
            </div>
            <h2><%= pokemon.name %></h2>
            <% results = [] %>
            <% pokemon.ratings.each do |rating| %>
              <% results << rating.stars %>
            <% end %>
            <% star_number = results.reduce(:+) / pokemon.ratings.count %>
            <p><strong>Average rating: </strong>
              <% star_number.times do %>
                <i class="fa fa-star-o"></i>
              <% end %>
              <% (5 - star_number).times do %>
                <i class="fa fa-star"></i>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

